{
  "env": {
    "es6": true,
    "node": true,
    "jest/globals": true
  },
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:jest/recommended",
    "airbnb-typescript",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "rules": {
    "class-methods-use-this": "off",
    "no-unused-vars": "off",
    "no-plusplus": "off",
    "no-return-await": "off",
    "no-console": "off"
  }
}
