{
  "name": "squad-28-technical-share",
  "version": "1.0.0",
  "description": "Sistema desenvolvido para o Programa de Formação Season 3 da FCamara",
  "main": "src/server.js",
  "engines": {
    "node": "16.x",
    "yarn": "1.22.x"
  },
  "scripts": {
    "test": "cross-env NODE_ENV=test npx jest --config jest.config.js --runInBand --detectOpenHandles",
    "test:w": "cross-env NODE_ENV=test npx jest --config jest.config.js --runInBand --detectOpenHandles --watch",
    "prebuild": "npx rimraf ./dist",
    "build": "npx sucrase ./src -d ./dist --transforms imports",
    "heroku-cleanup": "rm -rf ./src ./test ./docs",
    "start": "node ./dist/server.js",
    "dev": "nodemon ./src/server.js",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:undo": "npx sequelize-cli db:migrate:undo:all"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^2.3.3",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.18.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.0.0-alpha.7",
    "@sucrase/jest-plugin": "^2.2.0",
    "cross-env": "7.0.3",
    "jest": "^27.4.5",
    "nodemon": "^2.0.15",
    "rimraf": "^3.0.2",
    "sequelize-cli": "^6.4.1",
    "sqlite3": "^5.0.2",
    "sucrase": "^3.20.3",
    "supertest": "6.1.6"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Squad-28/back-end"
  },
  "keywords": [
    "node",
    "heroku",
    "express",
    "sequelize",
    "mysql",
    "jest"
  ],
  "license": "MIT"
}
