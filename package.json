{
  "name": "squad-28-technical-share",
  "version": "1.0.0",
  "description": "Sistema desenvolvido para o Programa de Formação Season 3 da FCamara",
  "main": "src/server.js",
  "engines": {
    "node": "16.x"
  },
  "scripts": {
    "typeorm": "typeorm-ts-node-esm",
    "lint": "npx eslint . --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "test": "cross-env NODE_ENV=test npx jest --config jest.config.js --runInBand --detectOpenHandles",
    "test:ci": "npm run test -- --coverage --silent --verbose",
    "test:watch": "npm run test -- --watch",
    "prebuild": "npx rimraf ./dist",
    "build": "npx babel ./src --out-dir ./dist --no-copy-ignored --extensions \".ts,.tsx\" --verbose --source-maps inline --copy-files",
    "heroku-cleanup": "rm -rf ./src ./docs",
    "start": "npx pm2 start ecosystem.config.js",
    "start:node": "node ./dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only ./src/server.ts",
    "dev:ngrok": "cross-env NGROK=true ts-node-dev --respawn --transpile-only ./src/server.ts",
    "db:seed": "npx sequelize-cli db:migrate"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "helmet": "^5.0.2",
    "joi": "^17.6.0",
    "mysql2": "^2.3.3",
    "pm2": "^5.2.0",
    "swagger-ui-express": "^4.3.0",
    "typeorm": "^0.3.6",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.9",
    "@babel/node": "^7.16.8",
    "@babel/plugin-proposal-decorators": "^7.17.9",
    "@babel/plugin-transform-typescript": "^7.16.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@faker-js/faker": "^6.0.0-alpha.7",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/joi": "^17.2.3",
    "@types/node": "^17.0.25",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "cross-env": "7.0.3",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.1.4",
    "jest": "^27.4.5",
    "ngrok": "^4.3.1",
    "prettier": "^2.6.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "sqlite3": "5.0.0",
    "supertest": "6.1.6",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Squad-28/back-end"
  },
  "keywords": [
    "node",
    "typescript",
    "heroku",
    "express",
    "typeorm",
    "docker",
    "pm2",
    "mysql",
    "github-actions",
    "ngrok",
    "sqlite",
    "jest",
    "supertest"
  ],
  "license": "MIT"
}
